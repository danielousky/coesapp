- if ((current_estudiante and current_usuario.estudiante and current_usuario.estudiante.direccion.nil?) or current_usuario.datos_incompletos?)
	.modal.fade#actualizar_datos{'aria-labelledby': "myModalLabel", 'aria-hidden': false}
		.modal-dialog.modal-lg
			.modal-content
				.alert.alert-info.text-center
					%h5 Atención:
					Actualice sus datos para una mejor experiencia
				= render 'layouts/messages'
				- if current_usuario.ci.eql? current_usuario.password
					.alert.alert-warning
						%b Atención:
						Cambie su contraseña a un valor distinto a la cédula de identidad

				%h5#myModalLabel.text-center
					Actualizar Datos
				.modal-body
					.border.m-1.p-3
						= render partial: '/admin/usuarios/form'
		:javascript
			$(document).ready(function() {
				$("#actualizar_datos").modal({keyboard: false, backdrop: 'static'});
			});

		%br
		%br
		%br
