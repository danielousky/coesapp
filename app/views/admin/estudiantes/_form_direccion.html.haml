%h6.titulo.m-2 Dirección de habitación:
%br
= hidden_field_tag '[direccion]estudiante_id', @usuario.ci

- @sector = @usuario.estudiante.direccion.sector if @usuario and @usuario.estudiante and @usuario.estudiante.direccion
- @calle = @usuario.estudiante.direccion.calle if @usuario and @usuario.estudiante and @usuario.estudiante.direccion
- @tipo_vivienda = @usuario.estudiante.direccion.tipo_vivienda if @usuario and @usuario.estudiante and @usuario.estudiante.direccion
- @nombre = @usuario.estudiante.direccion.nombre_vivienda if @usuario and @usuario.estudiante and @usuario.estudiante.direccion

- classRequired = requerido ? 'required' : ''
  
.form-group.row
  %label.col-form-label.col-md-3.text-right Ubicación:
  .col-md-3
    = select_tag '[direccion]estado', options_for_select(Direccion.estados, @estado), class: "dynamic form-control #{classRequired}", required: requerido, include_blank: '--- Seleccione Estado ---', id: 'selectEstado', children: 'selectMunicipio', url: getMunicipios_usuarios_path
  .col-md-3
    - @municipios ||= []  
    = select_tag '[direccion]municipio', options_for_select(@municipios, @municipio), class: "form-control #{classRequired}", required: requerido, include_blank: '--- Seleccione Municipio ---', id: 'selectMunicipio', childer: 'selectParroquia', url: getParroquias_usuarios_path
  .col-md-3
    - @parroquias ||= []  
    = select_tag '[direccion]ciudad', options_for_select(@parroquias, @parroquia), class: "form-control #{classRequired}", required: requerido, include_blank: '--- Seleccione Parroquia ---', id: 'selectParroquia'
.form-group.row
  %label.col-form-label.col-md-3.text-right Urbanización/Sector:
  .col-md-9
    = text_field_tag '[direccion]sector', @sector, class: "form-control #{classRequired}", required: requerido

.form-group.row
  %label.col-form-label.col-md-3.text-right Calle/Avenida:
  .col-md-9
    = text_field_tag '[direccion]calle', @calle, class: "form-control #{classRequired}", required: requerido

.form-group.row
  %label.col-form-label.col-md-3.text-right Tipo de Vivienda:
  .col-md-9
    %label.btn.btn-secondary.btn-sm
      = radio_button_tag '[direccion]tipo_vivienda', 'Casa', ('Casa'.eql? @tipo_vivienda), required: requerido, class: classRequired
      Casa
    %label.btn.btn-secondary.btn-sm
      = radio_button_tag '[direccion]tipo_vivienda', 'Quinta', ('Quinta'.eql? @tipo_vivienda), required: requerido, class: classRequired
      Quinta
    %label.btn.btn-secondary.btn-sm
      = radio_button_tag '[direccion]tipo_vivienda', 'Apartamento', ('Apartamento'.eql? @tipo_vivienda), required: requerido, class: classRequired
      Apartamento
.form-group.row
  %label.col-form-label.col-md-3.text-right Nombre/Número:
  .col-md-9
    = text_field_tag '[direccion]nombre_vivienda', @nombre, class: "form-control #{classRequired}", required: requerido

