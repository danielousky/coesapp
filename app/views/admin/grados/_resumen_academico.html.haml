
= render partial: '/admin/grados/opciones_descargables'
%b Resumen Académico:

- cursados = @inscripciones.total_creditos_cursados
- aprobados = @inscripciones.total_creditos_aprobados
%table.table.table-sm.table-hover
	%tr
		%td Créditos Inscritos:
		%th= @grado.total_creditos
	%tr
		%td Créditos Cursados:
		%th= cursados
	%tr
		%td Créditos Aprobados (Sin Equivalencias):
		%th= @inscripciones.sin_equivalencias.total_creditos_aprobados
	%tr
		%td Créditos Equivalencia:
		%th= @inscripciones.por_equivalencia.total_creditos
	%tr
		%td Total Créditos Aprobados:
		%th= aprobados
	%tr
		%td Eficiencia:
		- @grado.update(eficiencia: @grado.calcular_eficiencia)
		%th= @grado.eficiencia
	%tr
		%td Promedio Simple:
		- @grado.update(promedio_simple: @grado.calcular_promedio_simple)
		%th= @grado.promedio_simple
	%tr
		%td Promedio Simple Aprobado:
		%th= @grado.calcular_promedio_simple_aprobado
	%tr
		%td Promedio Ponderado Aprobado:
		%th= @grado.calcular_promedio_ponderado_aprobado
	%tr
		%td Promedio Ponderado:
		- @grado.update(promedio_ponderado: @grado.calcular_promedio_ponderado)
		%th= @grado.promedio_ponderado
