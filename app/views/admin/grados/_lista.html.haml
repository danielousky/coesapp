- case estado
	- when 1
		- tipo = 'Tesistas'
	- when 2
		- tipo = 'Posibles Graduandos'
	- when 3
		- tipo = 'Graduandos'
	- when 4
		- tipo = 'Graduados'
	- else
		- tipo = 'Sin tipo'



- href = "#{exportar_lista_csv_descargar_path(1)}?grado=#{estado}"
= btn_toggle_download 'btn btn-sm btn-outline-secondary',href , "listado de #{tipo.downcase} en CSV (VÃ¡lido para Excel)", "#{glyph 'file'}"
%br
%br
%table.table.table-striped.table-sm.table-hover.table-bordered.responsive-table{id: "table#{estado}"}
	%thead
		%tr
			%th Estudiante
			%th Escuela
			%th Plan
			%th Opciones
	%tbody
		- registros.each do |registro| 
			= render partial: '/admin/grados/detalle_registro', locals: {registro: registro, estado: estado}
