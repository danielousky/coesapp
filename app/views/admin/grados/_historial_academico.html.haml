.border.mt-3.p-3
	=# render partial: '/admin/grados/opciones_descargables'
	%h6.titulo.text-center Registro de Historial Académico:
	.row
		.col-2
		.col-8= render '/admin/grados/resumen_academico'
		.col-2

	#accordion
		- @periodos.each do |periodo|
			- inscripciones_periodo = @inscripciones.del_periodo(periodo.id)
			- if inscripciones_periodo.any?
				- if periodo and @escuela and periodo.eql? @escuela.periodo_activo
					- @periodo_activo_clases = 'tooltip-btn border-success'
					- @periodo_activo_title = 'Periodo Activo'
					- @bg_color = 'background-color:#def4e394'
				- else
					- @periodo_activo_clases = ''
					- @periodo_activo_title = ''
					- @bg_color = ''

				.card{class: @periodo_activo_clases, 'data-toggle': :tooltip, title: @periodo_activo_title}
					.card-header{id: "heading#{periodo.id}"}
						%h5.mb-0
							


							= link_to "Período Académico #{periodo.id}", "#collapse#{periodo.id}", {"aria-controls" => "collapse#{periodo.id}", "aria-expanded": :true, "data-target": "#collapse#{periodo.id}", "data-toggle": :collapse, class: "btn btn-link"}
							- if ins_esc_per = @estudiante.inscripcionescuelaperiodos.del_periodo(periodo.id).de_la_escuela(@escuela.id).first
								- if ins_esc_per.tipo_estado_inscripcion
									.badge.badge-info= ins_esc_per.tipo_estado_inscripcion.descripcion.singularize

								- if periodo.es_mayor_al_anno? 2018
									= render partial: '/admin/inscripcionescuelaperiodos/descripcion_opciones', locals: {ins_esc_per: ins_esc_per}

					.collapse{id: "collapse#{periodo.id}", "aria-labelledby": "heading#{periodo.id}", "data-parent": "#accordion", "data-toggle": false}
						.card-body{style: @bg_color}
							= render partial: '/admin/estudiantes/table_contenido_historial', locals: {inscripciones: inscripciones_periodo}


:javascript

	$('#accordion').collapse({
		toggle: false
	})

	function confirmar(ele) {
		ele.parent().submit();

		if (ele.is(":checked")) {
			ele.closest('tr').addClass('info');
		}else{
			ele.closest('tr').removeClass('info');
		}
	};

	function retirar(id){
		$.ajax
	}
	