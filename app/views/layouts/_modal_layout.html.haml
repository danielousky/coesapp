- metodo ||= :post
.modal.fade{'aria-hidden': true, role: :dialog, id: id_modal, tabindex: "-1"}
  .modal-dialog{class: width}
    .modal-content
      .alert.alert-info
        %button.close{"aria-label": "Cerrar", "data-dismiss": :modal, type: :button}
          %span{"aria-hidden": true} Ã—      
        %h4.text-center{id: "#{id_modal}Title"}= title
      .modal-body.border.p-2
        = form_tag(url, id: "#{id_modal}Form", class: 'form-horizontal', method: metodo) do
          = content
          .modal-footer
            %a.btn.btn-sm.btn-outline-light{data: {dismiss: 'modal'}} Cancelar
            - unless url.nil?
              = submit_tag 'Guardar', class: 'btn btn-outline-success btn-sm'
